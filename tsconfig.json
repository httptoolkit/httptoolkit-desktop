{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "module": "node20",
        "moduleResolution": "nodenext",
        "rewriteRelativeImportExtensions": true,
        "skipLibCheck": true,
        "types": ["node"],
        "pretty": true,
        "target": "ES2022",
        "jsx": "react"
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4
    },
    "include": [
        "./src/index.ts",
        "./src/preload.ts",
        "./custom-typings/**/*.d.ts"
    ]
}
