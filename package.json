{
  "name": "httptoolkit-desktop",
  "productName": "HTTP Toolkit",
  "version": "1.0.2",
  "homepage": "https://httptoolkit.tech",
  "private": true,
  "description": "HTTP(S) debugging, development & testing tool",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "npm run build:src && npm run build:electron",
    "build:src": "tsc",
    "build:electron": "electron-builder build",
    "build:dir-only": "electron-builder --dir",
    "start": "node setup-local.js && npm run start:app",
    "start:dev": "node setup-dev.js && cross-env APP_URL='http://local.httptoolkit.tech:8080' npm run start:app",
    "start:app": "tsc-watch --onSuccess 'electron .'"
  },
  "keywords": [],
  "author": "Tim Perry",
  "license": "AGPL-3.0-or-later",
  "config": {
    "httptoolkit-server-version": "1.0.2"
  },
  "build": {
    "appId": "tech.httptoolkit.desktop",
    "extends": null,
    "productName": "HTTP Toolkit",
    "files": [
      "**/*",
      "build/**/*",
      "!custom-typings",
      "!certificates",
      "!appveyor-tools",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      "httptoolkit-server/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "executableName": "httptoolkit",
      "category": "Development",
      "icon": "src/icon.png",
      "maintainer": "contact@httptoolkit.tech",
      "desktop": {
        "Name": "HTTP Toolkit",
        "Comment": "HTTP(S) debugging, development & testing tool",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Development;Network",
        "StartupNotify": true
      }
    },
    "afterSign": "./src/hooks/post-package.js"
  },
  "dependencies": {
    "@sentry/electron": "^0.17.1",
    "electron-context-menu": "^0.15.1",
    "electron-first-run": "^3.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "rimraf": "^2.7.1",
    "semver": "^7.2.1",
    "tslib": "^1.10.0",
    "universal-analytics": "^0.4.20",
    "uuid": "^3.3.3",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.2",
    "@types/electron-window-state": "^2.0.33",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.1.4",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.4",
    "@types/universal-analytics": "^0.4.3",
    "@types/uuid": "^3.4.6",
    "@types/yargs": "^15.0.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.3",
    "electron": "^4.1.4",
    "electron-builder": "^22.9.1",
    "electron-forge": "^5.2.4",
    "electron-notarize": "^0.2.1",
    "lodash": "^4.17.19",
    "node-fetch": "^2.6.1",
    "targz": "^1.0.1",
    "ts-node": "^7.0.1",
    "tsc-watch": "^4.2.9",
    "tslint": "^5.20.1",
    "typescript": "^3.8.2"
  }
}
