{
  "name": "httptoolkit-desktop",
  "productName": "HTTP Toolkit",
  "version": "1.24.1",
  "homepage": "https://httptoolkit.com",
  "private": true,
  "description": "HTTP(S) debugging, development & testing tool",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "server:setup": "tsx ./setup-server.ts",
    "build": "npm run build:src && npm run build:electron",
    "build:src": "tsc",
    "postbuild:src": "tsx ./strip-preload-map.ts",
    "build:electron": "npm run server:setup && electron-builder build --config electron-builder.config.cjs",
    "build:dir-only": "npm run server:setup && electron-builder --dir",
    "start": "npm run server:setup && npm run start:app",
    "start:dev": "tsx ./skip-server.ts && cross-env HTK_DEV=true APP_URL='http://localhost:8080' npm run start:app",
    "start:app": "tsc-watch --onSuccess \"electron .\"",
    "test": "npm run server:setup && npm run build:src && playwright test"
  },
  "keywords": [],
  "author": "Tim Perry",
  "license": "AGPL-3.0-or-later",
  "config": {
    "httptoolkit-server-version": "1.24.1"
  },
  "build": {
    "appId": "tech.httptoolkit.desktop",
    "extends": null,
    "productName": "HTTP Toolkit",
    "extraMetadata": {
      "name": "httptoolkit",
      "productName": "httptoolkit",
      "author": "Toolshed Labs SLU"
    },
    "files": [
      "**/*",
      "build/**/*",
      "!custom-typings",
      "!certificates",
      "!appveyor-tools",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      "httptoolkit-server/**/*"
    ],
    "artifactName": "HttpToolkit-${version}-${arch}.${ext}",
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "src/icons/icon.icns",
      "entitlements": "src/entitlements.plist",
      "entitlementsInherit": "src/entitlements.plist",
      "forceCodeSigning": true,
      "notarize": true
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "HttpToolkit-${version}-${os}-${arch}.${ext}",
      "icon": "./src/icons/icon.ico",
      "forceCodeSigning": true
    },
    "nsis": {
      "installerIcon": "./src/icons/icon.ico",
      "artifactName": "HttpToolkit-${version}.${ext}",
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "zip"
      ],
      "artifactName": "HttpToolkit-${version}-${os}-${arch}.${ext}",
      "executableName": "httptoolkit",
      "category": "Development",
      "icon": "./src/icons/icon.svg",
      "maintainer": "contact@httptoolkit.com",
      "desktop": {
        "entry": {
          "Name": "HTTP Toolkit",
          "Comment": "HTTP(S) debugging, development & testing tool",
          "Categories": "Development;Network",
          "StartupNotify": true
        }
      }
    },
    "deb": {
      "artifactName": "HttpToolkit-${version}-${arch}.${ext}",
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0"
      ]
    },
    "rpm": {
      "artifactName": "HttpToolkit-${version}-${arch}.${ext}",
      "afterRemove": "scripts/post-uninstall-rpm.sh"
    },
    "appImage": {
      "artifactName": "HttpToolkit-${version}-${arch}.${ext}"
    },
    "publish": null,
    "electronFuses": {
      "runAsNode": false,
      "enableCookieEncryption": true,
      "enableNodeOptionsEnvironmentVariable": false,
      "enableNodeCliInspectArguments": false,
      "onlyLoadAppFromAsar": true,
      "enableEmbeddedAsarIntegrityValidation": true,
      "loadBrowserProcessSpecificV8Snapshot": false,
      "grantFileProtocolExtraPrivileges": false,
      "resetAdHocDarwinSignature": false
    }
  },
  "dependencies": {
    "@httptoolkit/util": "^0.1.8",
    "@sentry/electron": "^7.2.0",
    "electron-context-menu": "^3.5.0",
    "electron-store": "^11.0.1",
    "electron-window-state": "^5.0.3",
    "os-proxy-config": "^1.1.1",
    "semver": "^7.2.1",
    "tslib": "^2.8.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/lodash": "^4.14.149",
    "@types/node-fetch": "^2.1.4",
    "@types/semver": "^7.3.4",
    "@types/targz": "^1.0.0",
    "@types/yargs": "^15.0.3",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "targz": "^1.0.1",
    "tsc-watch": "^4.2.9",
    "tsx": "^4.16.2",
    "typescript": "~5.9"
  },
  "engines": {
    "node": ">=22"
  }
}
